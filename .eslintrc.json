{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "no-param-reassign": [
            "error",
            {
              "props": false
            }
          ],
          "indent": [
            "error",
            2
          ],
          "linebreak-style": [
            "error",
            "unix"
          ],
          "quotes": [
            "error",
            "single"
          ],
          "semi": [
            "error",
            "always"
          ],
          "max-len": [
            "error",
            {
              "code": 100
            }
          ],
          "no-warning-comments": "warn"
    }
}